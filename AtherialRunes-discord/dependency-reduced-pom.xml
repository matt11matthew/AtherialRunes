<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>AtherialRunes-maven</artifactId>
    <groupId>me.matt11matthew.atherialrunes</groupId>
    <version>default</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>AtherialRunes-discord</artifactId>
  <build>
    <defaultGoal>clean install</defaultGoal>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <finalName>AtherialRunesDiscordBot</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.ini4j:ini4j</include>
                  <include>commons-net:commons-net</include>
                  <include>net.lingala.zip4j:zip4j</include>
                  <include>ch.qos.logback:logback-classic</include>
                  <include>de.btobastian.javacord:javacord</include>
                  <include>com.mashape.unirest:unirest-java</include>
                  <include>junit:junit</include>
                  <include>org.apache.commands:commons-lang3</include>
                  <include>org.apache.commands:commons-compress</include>
                  <include>org.apache.httpcomponents:httpclient</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>me.matt11matthew.atherialrunes.discord.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>codecrafter47-repo</id>
      <url>http://nexus.codecrafter47.dyndns.eu/content/repositories/public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-compress</artifactId>
      <version>1.12</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>

